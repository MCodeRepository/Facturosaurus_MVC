@using Facturosaurus.Application.CompanyDetails.Commands.CreateNewCompanyDetails
@model CreateNewCompanyDetailsCommand


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateNewCompanyDetailsModal">
    Zaktualizuj dane firmy
</button>

<!-- Modal -->
<div class="modal fade" id="CreateNewCompanyDetailsModal" tabindex="-1" aria-labelledby="CreateCewCompanyDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-fullscreen-md-down">
        <div class="modal-content">
            <form asp-action="CreateNewCompanyDetails">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="CreateCewCompanyDetails">Zaktualizuj dane firmy</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="card mb-3">
                        <div class="card-header">
                            Podstawowe dane:
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="CompanyName" class="control-label">Nazwa firmy</label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShortCompanyName" class="control-label">Skrócona nazwa firmy</label>
                                <input asp-for="ShortCompanyName" class="form-control" />
                                <span asp-validation-for="ShortCompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NipNumber" class="control-label">NIP</label>
                                <input asp-for="NipNumber" class="form-control" />
                                <span asp-validation-for="NipNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            Dane adresowe:
                        </div>
                        <div class="card-body">
                            <div class="form-group ">
                                <label asp-for="StreetName" class="control-label">Ulica</label>
                                <input asp-for="StreetName" class="form-control" />
                                <span asp-validation-for="StreetName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BildingNumber" class="control-label">Numer budynku</label>
                                <input asp-for="BildingNumber" class="form-control" />
                                <span asp-validation-for="BildingNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ApartmentNumber" class="control-label">Numer lokalu</label>
                                <input asp-for="ApartmentNumber" class="form-control" />
                                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ZipCode" class="control-label">Kod pocztowy</label>
                                <input asp-for="ZipCode" class="form-control" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="City" class="control-label">Miasto</label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            Konto bankowe firmy:
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="BankName" class="control-label">Nazwa banku</label>
                                <input asp-for="BankName" class="form-control" />
                                <span asp-validation-for="BankName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Currency" class="control-label">Waluta</label>
                                <input asp-for="Currency" class="form-control" />
                                <span asp-validation-for="Currency" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BankAccountNumber" class="control-label">Numer konta</label>
                                <input asp-for="BankAccountNumber" class="form-control" />
                                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            Dane kontaktowe:
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label">Numer telefonu</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AddressEmail" class="control-label">Ares e-mail</label>
                                <input asp-for="AddressEmail" class="form-control" />
                                <span asp-validation-for="AddressEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}